<section class="text-gray-600 body-font">
  <div class="container mx-auto flex px-5 py-12 md:flex-row flex-col items-center">
    <div class="lg:max-w-lg lg:w-full md:w-1/2 w-5/6 mb-10 md:mb-0">
	  <%= image_tag "logo-900-clear.png", class:"object-cover object-center rounded"  %>
    </div>
    <div class="lg:flex-grow md:w-1/2 lg:pl-24 md:pl-16 flex flex-col md:items-start md:text-left items-center text-center">
      <h1 class="title-font sm:text-4xl text-3xl mb-4 font-medium text-gray-900">CHILLFILTR®
        <br class="hidden lg:inline-block">This song is about you.
      </h1>
      <p class="mb-8 leading-relaxed">CHILLFILTR® is a multifaceted platform dedicated to amplifying independent voices in both music and literature.
Listen live Sunday mornings from 9-11am on 89.5 FM Ashland, 94.1 Medford, at <a class="hover:text-white bg-teal-300" href="https://kskq.org" target="_blank">kskq.org</a>, & archived at <a class="hover:text-white bg-teal-300" href="https://weeklycatch.org" target="_blank">weeklycatch.org</a>.</p>
      <div class="flex justify-center">
        <button class="inline-flex text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded text-lg"><a href="#random">Random Post</a></button>
        <button class="ml-4 inline-flex text-gray-700 bg-gray-100 border-0 py-2 px-6 focus:outline-none hover:bg-gray-200 rounded text-lg"><%= link_to "Submissions", pages_submit_path %> </button>
      </div>
    </div>
  </div>
  
  <!-- Link Letter Opener -->
</section>

<!-- FIRST CONTENT SECTION -->
<% @posts.last(98).each_slice(2) do |first_p, second_p| %>
	<%= render "shared/index_items", :first_p => first_p, :second_p => second_p %>
<% end %>
