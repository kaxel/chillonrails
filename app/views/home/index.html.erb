<section data-collapse-target="content" class="text-gray-600 body-font overflow-hidden transition-all duration-300 ease-in-out">
    <div class="container mx-auto px-5 py-12 max-w-4xl">
      <div class="flex flex-col items-center text-center">
        <h1 class="title-font sm:text-4xl text-3xl mb-4 font-medium text-gray-900">CHILLFILTR®
          <br class="hidden lg:inline-block">Supports Indie.
        </h1>
        <p class="mb-8 leading-relaxed">CHILLFILTR® is a multifaceted platform dedicated to amplifying independent voices in both music and literature.
  Listen live Wednesday nights from 9-11pm on 89.5 FM Ashland, 94.1 FM Medford, at <a class="hover:text-white bg-teal-300" href="https://kskq.org" target="_blank">kskq.org</a>, & archived at <a class="hover:text-white bg-teal-300" href="https://weeklycatch.org" target="_blank">weeklycatch.org</a>.
        </p>
        <div class="flex justify-center">
          <button class="inline-flex text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded text-lg"><a href="#top_of_index">Posts</a></button>
          <button class="ml-4 inline-flex text-gray-700 bg-gray-100 border-0 py-2 px-6 focus:outline-none hover:bg-gray-200 rounded text-lg">
            <%= link_to "Submissions", pages_submit_path %>
          </button>
          <button class="ml-4 inline-flex text-orange-700 bg-orange-100 border-0 py-2 px-6 focus:outline-none hover:bg-orange-200 rounded text-lg">
            <%= link_to "RSS Feed", posts_feed_path(format: :rss), target: "_blank", class: "flex items-center" do %>
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path d="M3.429 2.571c0-.952.77-1.714 1.714-1.714s1.714.762 1.714 1.714-.77 1.714-1.714 1.714-1.714-.762-1.714-1.714zm.571 4.286c3.143 0 5.714 2.571 5.714 5.714h2.286c0-4.381-3.619-8-8-8v2.286zm0 4c1.143 0 2.286 1.143 2.286 2.286h2.286c0-2.476-2.095-4.571-4.571-4.571v2.285z"/>
              </svg>
              RSS
            <% end %>
          </button>
        </div>
      </div>
    </div>
    
    <!-- Link Letter Opener -->
</section>
<a id="top_of_index"></a>
<!-- FIRST CONTENT SECTION -->
<section class="mb-8">
<h1 class="title-font text-2xl mb-4 font-medium text-gray-900 text-center">Top Posts</h1>
<div class="max-w-2xl mx-auto bg-white rounded-lg shadow-sm border border-gray-200">
  <%= render "shared/top_posts_list" %>
</div>
</section>
<section>
<h1 class="title-font sm:text-4xl text-3xl my-8 mb-4 font-medium text-gray-900 text-center">Recent Posts<% if @current_topic %><%= " in #{@current_topic.titleize}" %><% end %></h1>
<!-- SECOND CONTENT SECTION -->
<div id="posts-container" data-controller="infinite-scroll" data-infinite-scroll-page-value="<%= @page %>" data-infinite-scroll-topic-value="<%= @current_topic %>">
  <% @posts.each_slice(2) do |first_p, second_p| %>
    <%= render "shared/index_items", :first_p => first_p, :second_p => second_p %>
  <% end %>
</div>
<div id="loading-indicator" class="text-center py-8">
  <!-- Loading content will be inserted here by JavaScript -->
</div>
</section>
<%= render "shared/more_links" %>