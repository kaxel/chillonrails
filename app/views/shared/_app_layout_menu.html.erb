<header class="text-gray-600 body-font bg-white sticky top-0 z-50">
  <div class="container mx-auto max-w-5xl flex flex-wrap px-5 p-1 flex-row items-center justify-between">
    <a class="flex title-font font-medium items-center text-gray-900" href="/">
		<%= render 'shared/logo' %>
      <span class="ml-3 text-xl">CHILLFILTRÂ®</span>
    </a>
	<div class="flex relative ml-auto md:ml-0" data-controller="hamburger">
      <button data-action="click->hamburger#toggle" type="button" class="inline-flex items-center p-2 w-10 h-10 text-sm text-gray-500 rounded-lg hover:bg-gray-100 
	    focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600">
        <span class="sr-only">Open main menu</span>
        <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
        </svg>
      </button>
      <div class="hidden absolute right-0 top-12 w-48 bg-white rounded-lg shadow-lg border border-gray-200 z-50" data-hamburger-target="menu">
        <ul class="flex flex-col font-medium py-2">
          <li>
            <%= link_to 'Home', root_path, class: "block py-2 px-4 text-gray-700 hover:bg-gray-100", data: { action: "click->hamburger#hide" } %>
          </li>
          <% if Rails.application.routes.url_helpers.respond_to?(:pages_search_path) %>
            <li>
              <%= link_to 'Search', pages_search_path, class: "block py-2 px-4 text-gray-700 hover:bg-gray-100", data: { action: "click->hamburger#hide" } %>
            </li>
          <% end %>
          <% if Rails.application.routes.url_helpers.respond_to?(:pages_radio_path) %>
            <li>
              <%= link_to 'Radio', pages_radio_path, class: "block py-2 px-4 text-gray-700 hover:bg-gray-100", data: { action: "click->hamburger#hide" } %>
            </li>
          <% end %>
          <% if Rails.application.routes.url_helpers.respond_to?(:pages_about_path) %>
            <li>
              <%= link_to 'About', pages_about_path, class: "block py-2 px-4 text-gray-700 hover:bg-gray-100", data: { action: "click->hamburger#hide" } %>
            </li>
          <% end %>
          <% if Rails.application.routes.url_helpers.respond_to?(:pages_authentification_path)  && !Current.user %>
            <li>
              <%= link_to 'Login', pages_authentification_path, class: "block py-2 px-4 text-gray-700 hover:bg-gray-100", data: { action: "click->hamburger#hide" } %>
            </li>
          <% end %>
          <% if Rails.application.routes.url_helpers.respond_to?(:pages_account_path) && Current.user %>
            <li>
              <%= link_to 'Account', pages_account_path, class: "block py-2 px-4 text-gray-700 hover:bg-gray-100", data: { action: "click->hamburger#hide" } %>
            </li>
          <% end %>
          <% if Rails.application.routes.url_helpers.respond_to?(:pages_submit_path) %>
            <li>
              <%= link_to 'Submit', pages_submit_path, class: "block py-2 px-4 text-gray-700 hover:bg-gray-100", data: { action: "click->hamburger#hide" } %>
            </li>
          <% end %>
          <% if Rails.application.routes.url_helpers.respond_to?(:pages_contact_path) %>
            <li>
              <%= link_to 'Contact', pages_contact_path, class: "block py-2 px-4 text-gray-700 hover:bg-gray-100", data: { action: "click->hamburger#hide" } %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    
  </div>
</header>