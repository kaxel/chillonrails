<header class="text-gray-600 body-font bg-white sticky top-0 z-50">
  <div class="container mx-auto flex flex-wrap px-5 p-1 flex-col md:flex-row items-center">
    <a class="flex title-font font-medium items-center text-gray-900 mb-4 md:mb-0" href="/">
		<%= render 'shared/logo' %>
      <span class="ml-3 text-xl">CHILLFILTRÂ®</span>
    </a>
    <nav class="md:ml-auto flex flex-wrap items-center text-base justify-center">
		<a class="mr-1 hover:text-gray-900"><%= link_to "Radio", pages_radio_path, class: "block px-4 text-center bg-cyan-100 hover:bg-blue-500 hover:text-white rounded-lg" %></a>
	    <% if Rails.application.routes.url_helpers.respond_to?(:pages_about_path) %>
		  <a class="mr-1 hover:text-gray-900"><%= link_to "About", pages_about_path, class: "block px-4 text-center bg-green-100 hover:bg-blue-500 hover:text-white rounded-lg" %></a>
	    <% end %>
	    <% if Rails.application.routes.url_helpers.respond_to?(:pages_search_path) %>
		  <a class="mr-1 hover:text-gray-900"><%= link_to "Search", pages_search_path, class: "block px-4 text-center bg-amber-100 hover:bg-blue-500 hover:text-white rounded-lg" %></a>
	    <% end %>
	    <% if Rails.application.routes.url_helpers.respond_to?(:pages_authentification_path) %>
		  <a class="mr-1 hover:text-gray-900"><%= link_to "Login", pages_authentification_path, class: "block px-4 text-center bg-yellow-100 hover:bg-blue-500 hover:text-white rounded-lg" %></a>
	    <% end %>
		<% if Current.user %>
	      <% if Rails.application.routes.url_helpers.respond_to?(:pages_account_path) %>
	        <a class="mr-1 hover:text-gray-900"><%= link_to "Account", pages_account_path, class: "block px-4 text-center bg-red-100 hover:bg-blue-500 hover:text-white rounded-lg" %></a>
	      <% end %>
	      <% if Rails.application.routes.url_helpers.respond_to?(:letter_opener_web_path) && Rails.env.development? %>
	        <a class="mr-1 hover:text-gray-900"><%= link_to "Check Email", letter_opener_web_path, target: "_blank", class: "block px-4 text-center bg-gray-100 hover:bg-blue-500 hover:text-white rounded-lg" %></a>
	      <% end %>
		<% end %>
    </nav>
  </div>
</header>