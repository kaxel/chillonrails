<% @top20.sample(4).each do |post| %>
  <div class="text-gray-600 body-font hover:bg-gray-100 border-b border-gray-200">
    <a href="<%= post_path(slug: post.slug) %>">
      <div class="container px-4 py-2 mx-auto">
        <div class="flex sm:flex-row sm:items-center items-start">
          <div class="flex-shrink-0 mr-4">
            <img src="<%= post.image %>" alt="<%= post.title %>" class="w-12 h-12 object-cover rounded">
          </div>
          <div class="flex-grow">
            <h3 class="text-gray-900 font-medium text-sm mb-1"><%= post.title %></h3>
            <p class="text-gray-600 text-xs leading-tight"><%= truncate(post.preview, length: 80) %></p>
          </div>
        </div>
      </div>
    </a>
  </div>
<% end %>