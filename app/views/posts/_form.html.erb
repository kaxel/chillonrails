<%= form_with(model: post, url: post_path(slug: post.slug), local: true, class: "max-w-4xl mx-auto") do |form| %>
  <% if post.errors.any? %>
    <div class="error-messages mb-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
      <h4 class="font-bold"><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h4>
      <ul class="list-disc list-inside mt-2">
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
    <div class="text-left">
      <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
    </div>
    <div class="text-right">
      <%= form.text_field :title, required: true, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
    <div class="text-left">
      <%= form.label :slug, class: "block text-sm font-medium text-gray-700 mb-1" %>
    </div>
    <div class="text-right">
      <%= form.text_field :slug, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
    <div class="text-left">
      <%= form.label :content, class: "block text-sm font-medium text-gray-700 mb-1" %>
    </div>
    <div class="text-right">
      <%= form.text_area :content, rows: 6, required: true, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
    <div class="text-left">
      <%= form.label :preview, class: "block text-sm font-medium text-gray-700 mb-1" %>
    </div>
    <div class="text-right">
      <%= form.text_area :preview, rows: 3, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
    <div class="text-left">
      <%= form.label :topic, class: "block text-sm font-medium text-gray-700 mb-1" %>
    </div>
    <div class="text-right">
      <%= form.text_field :topic, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
    <div class="text-left">
      <%= form.label :image, class: "block text-sm font-medium text-gray-700 mb-1" %>
    </div>
    <div class="text-right">
      <%= form.text_field :image, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
    <div class="text-left">
      <%= form.label :video_link, class: "block text-sm font-medium text-gray-700 mb-1" %>
    </div>
    <div class="text-right">
      <%= form.url_field :video_link, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
    <div class="text-left">
      <%= form.label :audio_link, class: "block text-sm font-medium text-gray-700 mb-1" %>
    </div>
    <div class="text-right">
      <%= form.url_field :audio_link, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
    <div class="text-left">
      <%= form.label :location, class: "block text-sm font-medium text-gray-700 mb-1" %>
    </div>
    <div class="text-right">
      <%= form.text_field :location, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
    <div class="text-left">
      <%= form.label :tag_id, class: "block text-sm font-medium text-gray-700 mb-1" %>
    </div>
    <div class="text-right">
      <%= form.text_field :tags, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
    <div class="text-left">
      <%= form.label :score, class: "block text-sm font-medium text-gray-700 mb-1" %>
    </div>
    <div class="text-right">
      <%= form.number_field :score, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
    <div class="text-left">
      <%= form.label :score_all_time, class: "block text-sm font-medium text-gray-700 mb-1" %>
    </div>
    <div class="text-right">
      <%= form.number_field :score_all_time, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-6">
    <div></div>
    <div class="text-right">
      <%= form.submit class: "bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>
  </div>
<% end %>