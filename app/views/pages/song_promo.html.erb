<script>
document.addEventListener('DOMContentLoaded', function() {
  const getItBtn = document.getElementById('getItBtn');
  const formContainer = document.getElementById('formContainer');
  
  // Debug logging
  console.log('Button:', getItBtn);
  console.log('Form container:', formContainer);
  
  if (!getItBtn || !formContainer) {
    console.error('Button or form container not found');
    return;
  }
  
  getItBtn.addEventListener('click', function(e) {
    e.preventDefault();
    console.log('Button clicked, current classes:', formContainer.className);
    
    if (formContainer.classList.contains('hidden')) {
      // Show the form
      formContainer.classList.remove('hidden');
      formContainer.classList.add('mt-8');
      getItBtn.textContent = 'Hide Form';
      formContainer.scrollIntoView({ behavior: 'smooth', block: 'start' });
      console.log('Form shown');
    } else {
      // Hide the form
      formContainer.classList.remove('mt-8');
      formContainer.classList.add('hidden');
      getItBtn.textContent = 'Get It';
      console.log('Form hidden');
    }
  });
});
</script>