        <button class="inline-flex text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded text-lg"><%= link_to "Submit", pages_submit_path %></button>
        <button class="ml-4 inline-flex text-gray-700 bg-gray-100 border-0 py-2 px-6 focus:outline-none hover:bg-gray-200 rounded text-lg"><%= link_to "More About Me", pages_about_path(anchor: "beginning"), class: "button", onclick: "handleClick(); return false;" %></button>
		
